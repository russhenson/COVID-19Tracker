<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#132A3F"
    tools:context=".ui.city.CityFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/cityNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_bold"
        android:text="NCR"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBar2"
        app:layout_constraintVertical_bias="0.137" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/cityNameTv"
        tools:layout_editor_absoluteX="0dp">

        <View
            android:id="@+id/cityActiveCasesView"
            android:layout_width="175dp"
            android:layout_height="125dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/fill_curved_border"
            android:foregroundGravity="top|clip_horizontal|clip_vertical"
            app:layout_constraintBottom_toTopOf="@+id/cityDeceasedCasesView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.173" />

        <TextView
            android:id="@+id/cityActiveTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="Active"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/cityActiveCasesView"
            app:layout_constraintStart_toStartOf="@+id/cityActiveCasesView"
            app:layout_constraintTop_toTopOf="@+id/cityActiveCasesView" />

        <TextView
            android:id="@+id/cityActiveNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helvetica_bold"
            android:textAllCaps="true"
            android:textColor="#74C3FF"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/cityActiveCasesView"
            app:layout_constraintStart_toStartOf="@+id/cityActiveCasesView"
            app:layout_constraintTop_toBottomOf="@+id/cityActiveTv" />

        <View
            android:id="@+id/cityConfirmedCasesView"
            android:layout_width="175dp"
            android:layout_height="125dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/fill_curved_border"
            android:foregroundGravity="top|clip_horizontal|clip_vertical"
            app:layout_constraintBottom_toTopOf="@+id/cityRecoveredCasesView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.173" />

        <TextView
            android:id="@+id/cityConfirmedTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="Confirmed"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/cityConfirmedCasesView"
            app:layout_constraintStart_toStartOf="@+id/cityConfirmedCasesView"
            app:layout_constraintTop_toTopOf="@+id/cityConfirmedCasesView" />

        <TextView
            android:id="@+id/cityConfirmedNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helvetica_bold"
            android:textAllCaps="true"
            android:textColor="#FF7474"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/cityConfirmedCasesView"
            app:layout_constraintStart_toStartOf="@+id/cityConfirmedCasesView"
            app:layout_constraintTop_toBottomOf="@+id/cityConfirmedTv" />

        <View
            android:id="@+id/cityRecoveredCasesView"
            android:layout_width="175dp"
            android:layout_height="125dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/fill_curved_border"
            android:foregroundGravity="top|clip_horizontal|clip_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cityRecoveredTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="Recovered"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/cityRecoveredCasesView"
            app:layout_constraintStart_toStartOf="@+id/cityRecoveredCasesView"
            app:layout_constraintTop_toTopOf="@+id/cityRecoveredCasesView" />

        <TextView
            android:id="@+id/cityRecoveredNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helvetica_bold"
            android:textAllCaps="true"
            android:textColor="#18CF8B"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/cityRecoveredCasesView"
            app:layout_constraintStart_toStartOf="@+id/cityRecoveredCasesView"
            app:layout_constraintTop_toBottomOf="@+id/cityRecoveredTv" />


        <View
            android:id="@+id/cityDeceasedCasesView"
            android:layout_width="175dp"
            android:layout_height="125dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/fill_curved_border"
            android:foregroundGravity="top|clip_horizontal|clip_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/cityDeceasedTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="Deceased"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/cityDeceasedCasesView"
            app:layout_constraintStart_toStartOf="@+id/cityDeceasedCasesView"
            app:layout_constraintTop_toTopOf="@+id/cityDeceasedCasesView" />

        <TextView
            android:id="@+id/cityDeceasedNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/helvetica_bold"
            android:textAllCaps="true"
            android:textColor="#A7A7A7"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/cityDeceasedCasesView"
            app:layout_constraintStart_toStartOf="@+id/cityDeceasedCasesView"
            app:layout_constraintTop_toBottomOf="@+id/cityDeceasedTv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/actionBarShadow2"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:background="@drawable/actionbarshadow"
        android:foregroundGravity="top|clip_horizontal|clip_vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/actionBar2"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:background="#294054"
        android:foregroundGravity="top|clip_horizontal|clip_vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/helvetica_bold"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/actionBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>