<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#132A3F"
    tools:context=".ui.symptoms.SymptomsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp">

                <View
                    android:id="@+id/symptomsNoteView"
                    android:layout_width="375dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/fill_curved_border"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/symptomsNoteTv"
                    android:layout_width="325dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/helvetica"
                    android:text="COVID-19 affects different people in different ways. Most infected people will develop mild to moderate illness and recover without hospitalization."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/symptomsNoteView"
                    app:layout_constraintEnd_toEndOf="@+id/symptomsNoteView"
                    app:layout_constraintStart_toStartOf="@+id/symptomsNoteView"
                    app:layout_constraintTop_toTopOf="@+id/symptomsNoteView" />

                <TextView
                    android:id="@+id/ssTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/helvetica"
                    android:text="Serious symptoms:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/symptomsNoteView" />

                <View
                    android:id="@+id/ssView"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ssTv" />

                <View
                    android:id="@+id/ssView1"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ssView" />

                <View
                    android:id="@+id/ssView2"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ssView1" />

                <TextView
                    android:id="@+id/mcsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/helvetica"
                    android:text="Most common symptoms:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ssView2" />

                <View
                    android:id="@+id/mcsView"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mcsTv" />

                <View
                    android:id="@+id/mcsView1"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mcsView" />

                <View
                    android:id="@+id/mcsView2"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mcsView1" />

                <TextView
                    android:id="@+id/lcsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/helvetica"
                    android:text="Less common symptoms:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mcsView2" />

                <View
                    android:id="@+id/lcsView"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lcsTv" />

                <View
                    android:id="@+id/lcsView1"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lcsView" />

                <View
                    android:id="@+id/lcsView2"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lcsView1" />

                <View
                    android:id="@+id/lcsView3"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lcsView2" />

                <View
                    android:id="@+id/lcsView4"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lcsView3" />

                <View
                    android:id="@+id/lcsView5"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lcsView4" />

                <View
                    android:id="@+id/lcsView6"
                    android:layout_width="375dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/fill_curved_border_small"
                    android:foregroundGravity="top|clip_horizontal|clip_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lcsView5" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/actionBarShadow2"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:background="@drawable/actionbarshadow"
        android:foregroundGravity="top|clip_horizontal|clip_vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/actionBar2"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:background="#294054"
        android:foregroundGravity="top|clip_horizontal|clip_vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_symptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/helvetica_bold"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/actionBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>